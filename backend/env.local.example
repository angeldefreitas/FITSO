# Configuración para desarrollo local
# Copia este archivo como .env.local y ajusta los valores

NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8081

# Base de datos local (ajusta según tu configuración)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitso_dev
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# JWT
JWT_SECRET=tu_jwt_secret_para_desarrollo_local
JWT_EXPIRES_IN=7d

# Email (opcional para desarrollo)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password

# Google OAuth (opcional para desarrollo)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# RevenueCat (opcional para desarrollo)
REVENUECAT_API_KEY=tu_revenuecat_api_key
REVENUECAT_WEBHOOK_SECRET=tu_revenuecat_webhook_secret

# Apple Store Connect (para validación de recibos)
# Obtén el Shared Secret desde App Store Connect:
# 1. Ve a App Store Connect > Tu App > App Information
# 2. Busca "Shared Secret específico de la aplicación"
# 3. Haz clic en "Manage" y copia el secret
APPLE_SHARED_SECRET=tu_shared_secret_de_app_store_connect


